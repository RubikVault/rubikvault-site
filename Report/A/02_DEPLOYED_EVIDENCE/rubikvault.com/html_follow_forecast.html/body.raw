  <script>
    const API_BASE = '/data/forecast';

    // State for local data and sorting
    let activeForecasts = [];
    let sortConfig = { key: 'symbol', dir: 'asc' }; // dir: 'asc' or 'desc'

    async function fetchData(path) {
      try {
        const response = await fetch(`${API_BASE}/${path}`);
        if (!response.ok) throw new Error(`HTTP ${response.status}`);
        return await response.json();
      } catch (err) {
        console.warn(`Failed to fetch ${path}:`, err.message);
        return null;
      }
    }

    function showError(message) {
      const container = document.getElementById('error-container');
      container.innerHTML = `
        <div class="error-box" style="color: #f87171; border-color: #f87171; background: rgba(239, 68, 68, 0.1);">
          <strong>Error:</strong> ${message}
        </div>
      `;
    }

    function updateStatus(status) {
      const badge = document.getElementById('system-status');
      const circuitState = (status.circuit?.state || status.circuit_state || 'closed').toLowerCase();
      const systemStatus = String(status.status || status.meta?.status || '').toUpperCase();
      const reason = status.reason || status.message || status.meta?.reason || 'System healthy';

      // Updates for new CSS classes (badge-status-*)
      if (circuitState === 'open' || systemStatus === 'CIRCUIT_OPEN') {
        badge.className = 'badge-status-warn'; // Red/Orange
        badge.style.borderColor = 'rgba(239, 68, 68, 0.3)';
        badge.style.color = '#ef4444';
        badge.style.background = 'rgba(239, 68, 68, 0.1)';
        badge.innerHTML = '<span class="pulse-dot"></span> Circuit Open';
      } else if (systemStatus === 'STALE') {
        badge.className = 'badge-status-warn';
        badge.style.borderColor = 'rgba(245, 158, 11, 0.3)';
        badge.style.color = '#fbbf24';
        badge.style.background = 'rgba(245, 158, 11, 0.1)';
        badge.innerHTML = '<span class="pulse-dot"></span> Stale Data';
      } else if (systemStatus === 'BOOTSTRAP') {
        badge.className = 'badge-status-warn';
        badge.innerHTML = '<span class="pulse-dot"></span> Bootstrap';
      } else {
        badge.className = 'badge-status-ok';
        badge.removeAttribute('style'); // Reset inline overrides
        badge.innerHTML = '<span class="pulse-dot"></span> System Operational';
      }

      // Hidden fields for other logic
      const circuitReason = document.getElementById('circuit-reason');
      if (circuitReason) circuitReason.textContent = reason;

      const circuitStateEl = document.getElementById('circuit-state');
      if (circuitStateEl) circuitStateEl.textContent = circuitState;
    }

    function updateLatest(latest) {
      const phase = latest.data?.maturity_phase || 'BOOTSTRAP';
      document.getElementById('maturity-phase').textContent = phase;

      // Add days/progress if available, else descriptive text
      const days = latest.data?.maturity_days_generated || 0;
      const phaseMap = {
        'BOOTSTRAP': 'Initializing History',
        'GROWTH': 'Accumulating Data',
        'MATURE': 'Full Confidence'
      };
      const subText = document.getElementById('maturity-days');
      if (subText) subText.textContent = `${phaseMap[phase] || 'Unknown Regime'} (${days} days)`;
    }

    function updateMetrics(report) {
      if (!report) return;

      const metrics = report.global_metrics?.by_horizon || {};

      // Update Brier Score (focus on 20d as "Monthly Accuracy" proxy for the card)
      // Or use 5d if 20d is null
      const skill20d = metrics['20d']?.combined?.brier_skill;
      const skill5d = metrics['5d']?.combined?.brier_skill;
      const primarySkill = skill20d !== undefined ? skill20d : skill5d;

      const brierEl = document.getElementById('brier-30d');
      if (brierEl && primarySkill !== undefined && primarySkill !== null) {
        const val = (primarySkill * 100).toFixed(1);
        brierEl.textContent = (primarySkill > 0 ? '+' : '') + val + '%';
        brierEl.style.color = primarySkill > 0 ? '#4ade80' : '#f87171';
      }

      // Quota
      const compute = report.meta?.compute || {};
      const tested = compute.challengers_tested_this_period || 0;
      const min = compute.quota_monthly_min_challengers || 8;

      document.getElementById('challengers-tested').textContent = `${tested} / ${min}`;

      const progress = Math.min(100, (tested / min) * 100);
      const progressEl = document.getElementById('quota-progress');
      if (progressEl) {
        progressEl.style.width = `${progress}%`;
        // Class updates handled by CSS, but we can force color if needed
        progressEl.className = `progress-fill ${progress >= 100 ? 'progress-green' : (progress >= 50 ? 'progress-yellow' : 'progress-red')}`;
      }

      const quotaStatus = document.getElementById('quota-status');
      if (quotaStatus) {
        quotaStatus.textContent = compute.quota_status === 'met' ? 'Status: Met ‚úÖ' : 'Status: Pending';
        quotaStatus.style.color = compute.quota_status === 'met' ? '#4ade80' : '#94a3b8';
      }
    }

    function updatePromotions(promotions) {
      const tbody = document.querySelector('#promotions-table tbody');
      if (!tbody) return;

      if (!promotions || promotions.length === 0) {
        tbody.innerHTML = '<tr><td colspan="4" style="padding: 1rem; text-align: center; color: #64748b;">No recent promotions found</td></tr>';
        return;
      }

      tbody.innerHTML = promotions.slice(0, 5).map(p => `
        <tr>
          <td>${p.as_of?.slice(0, 10) || '‚Äî'}</td>
          <td style="font-family: monospace; color: #94a3b8;">${p.from_champion_id?.slice(-8) || '‚Äî'}</td>
          <td style="font-family: monospace; color: #f1f5f9;">${p.to_champion_id?.slice(-8) || '‚Äî'}</td>
          <td style="font-weight: 700; color: ${p.skill_delta > 0 ? '#4ade80' : '#f87171'};">
            ${p.skill_delta ? (p.skill_delta > 0 ? '+' : '') + p.skill_delta.toFixed(2) + '%' : '‚Äî'}
          </td>
        </tr>
      `).join('');
    }

    function formatDirection(horizon) {
      if (!horizon) return '<span style="color: #64748b;">‚Äî</span>';

      const dir = horizon.direction;
      const prob = horizon.probability ? (horizon.probability * 100).toFixed(0) + '%' : '';

      let badgeClass = 'badge-neutral';
      let icon = '‚Üí';

      if (dir === 'bullish') {
        badgeClass = 'badge-bullish';
        icon = '‚Üë';
      } else if (dir === 'bearish') {
        badgeClass = 'badge-bearish';
        icon = '‚Üì';
      }

      return `<span class="badge ${badgeClass}">${icon} ${prob}</span>`;
    }

    // --- SORTING LOGIC ---

    // Helper to get a sortable score from a horizon object
    // Bullish = +prob, Bearish = -prob, Neutral = 0
    function getHorizonScore(horizon) {
      if (!horizon) return -999; // Missing data goes to bottom
      const prob = horizon.probability || 0;
      if (horizon.direction === 'bullish') return prob;
      if (horizon.direction === 'bearish') return -prob;
      return 0; // Neutral
    }

    function sortTable(key) {
      // Toggle direction if clicking same key
      if (sortConfig.key === key) {
        sortConfig.dir = sortConfig.dir === 'asc' ? 'desc' : 'asc';
      } else {
        sortConfig.key = key;
        sortConfig.dir = 'desc'; // Default to desc (high values first) for new columns
        if (key === 'symbol' || key === 'name') sortConfig.dir = 'asc'; // Default asc for text
      }

      // Update Icons
      document.querySelectorAll('.sort-icon').forEach(el => el.textContent = '');
      const arrow = sortConfig.dir === 'asc' ? '‚Üë' : '‚Üì';
      const iconEl = document.getElementById(`sort-${key}`);
      if (iconEl) iconEl.textContent = arrow;

      renderForecastTable();
    }

    function renderForecastTable() {
      const tbody = document.querySelector('#forecasts-table tbody');
      const countEl = document.getElementById('forecast-count');

      if (!activeForecasts || activeForecasts.length === 0) {
        // Empty state handling handled in updateForecasts wrapper, but here for safety
        tbody.innerHTML = '<tr><td colspan="6" style="padding: 2rem; text-align: center; color: #64748b;">No active forecasts available</td></tr>';
        return;
      }

      // Sort data
      const sorted = [...activeForecasts].sort((a, b) => {
        let valA, valB;

        // Fetch comparison values
        if (sortConfig.key === 'symbol') {
          valA = a.symbol;
          valB = b.symbol;
        } else if (sortConfig.key === 'name') {
          valA = a.name || '';
          valB = b.name || '';
        } else {
          // Horizon sorting (1d, 5d, 20d, 252d)
          valA = getHorizonScore(a.horizons?.[sortConfig.key]);
          valB = getHorizonScore(b.horizons?.[sortConfig.key]);
        }

        // Compare
        if (valA < valB) return sortConfig.dir === 'asc' ? -1 : 1;
        if (valA > valB) return sortConfig.dir === 'asc' ? 1 : -1;
        return 0;
      });

      tbody.innerHTML = sorted.map(f => `
        <tr style="cursor: pointer;" onclick="window.location.href='/?ticker=${f.symbol}'">
          <td><strong class="ticker-symbol">${f.symbol}</strong></td>
          <td style="color: #94a3b8; font-size: 0.85rem;">${f.name || '‚Äî'}</td>
          <td>${formatDirection(f.horizons?.['1d'])}</td>
          <td>${formatDirection(f.horizons?.['5d'])}</td>
          <td>${formatDirection(f.horizons?.['20d'])}</td>
          <td>${formatDirection(f.horizons?.['252d'])}</td> <!-- 1 Year (Likely Empty) -->
        </tr>
      `).join('');
    }

    function updateForecasts(forecasts, state = 'BOOTSTRAP', reason = null) {
      // Update global state
      activeForecasts = forecasts || [];

      const bootstrapNotice = document.getElementById('bootstrap-notice');
      const countEl = document.getElementById('forecast-count');

      if (!activeForecasts || activeForecasts.length === 0) {
        // Show empty/loading state logic
        const tbody = document.querySelector('#forecasts-table tbody');
        tbody.innerHTML = '<tr><td colspan="6" style="padding: 2rem; text-align: center; color: #64748b;">No active forecasts available</td></tr>';

        const stateUpper = String(state || 'BOOTSTRAP').toUpperCase();
        let title = 'System Initializing';
        let prefix = '‚è≥';
        let detail = 'Forecasts will appear after the first pipeline run. Check back soon.';

        if (stateUpper === 'CIRCUIT_OPEN') {
          title = 'Circuit Open';
          prefix = '‚ö†Ô∏è';
          detail = reason || 'Forecast publish paused due to failed data-quality gates.';
        } else if (stateUpper === 'STALE') {
          title = 'Data Stale';
          prefix = 'üïí';
          detail = reason || 'Latest data is stale; refresh is pending.';
        }

        if (bootstrapNotice) {
          bootstrapNotice.innerHTML = `${prefix} <strong>${title}:</strong> ${detail}`;
          bootstrapNotice.style.display = 'block';
        }
        if (countEl) countEl.textContent = '0 stocks';
        return;
      }

      // Hide notice if we have data
      if (bootstrapNotice) bootstrapNotice.style.display = 'none';
      if (countEl) countEl.textContent = `${activeForecasts.length} stocks`;

      // Default Sort (if not set)
      if (!sortConfig.key) sortConfig = { key: 'symbol', dir: 'asc' };

      // Render
      renderForecastTable();
    }

    async function init() {
      // Load status
      const status = await fetchData('system/status.json');
      if (status) updateStatus(status);

      // Load latest
      const latest = await fetchData('latest.json');
      if (latest) {
        updateLatest(latest);
        document.getElementById('champion-id').textContent =
          latest.data?.champion_id?.slice(-12) || 'v3.4-initial';
        document.getElementById('champion-created').textContent =
          latest.meta?.generated_at ? new Date(latest.meta.generated_at).toLocaleString() : 'System bootstrap';

        // Update forecasts table
        updateForecasts(
          latest.data?.forecasts || [],
          latest.meta?.status || status?.status || 'BOOTSTRAP',
          latest.meta?.reason || status?.reason || null
        );
      }

      // Load latest daily report using ref from latest.json
      const reportRef = latest?.data?.latest_report_ref;
      if (reportRef) {
        const reportPath = reportRef.replace(/^public\/data\/forecast\//, '');
        const report = await fetchData(reportPath);
        if (report) {
          updateMetrics(report);
          updatePromotions(report.recent_changes?.promotions || []);
        }
      }
    }

    init();

    // Auto-refresh every 60 seconds
    setInterval(init, 60000);
  </script>
