{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Forecast v6 Candidates",
  "type": "object",
  "required": ["schema", "asof_date", "rows"],
  "properties": {
    "schema": { "const": "forecast_candidates_v6" },
    "asof_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "rows": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["symbol", "liquidity_bucket", "regime_bucket", "is_control", "expert_loss_weight", "router_loss_weight", "calibration_loss_weight"],
        "properties": {
          "symbol": { "type": "string" },
          "liquidity_bucket": { "type": "integer", "minimum": 0 },
          "regime_bucket": { "type": "string" },
          "is_control": { "type": "boolean" },
          "expert_loss_weight": { "type": "number" },
          "router_loss_weight": { "type": "number" },
          "calibration_loss_weight": { "type": "number" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
