{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Forecast v6 Predictions",
  "type": "object",
  "required": ["schema", "asof_date", "rows"],
  "properties": {
    "schema": { "const": "forecast_predictions_v6" },
    "asof_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "rows": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["prediction_id", "symbol", "asof_date", "p_up", "score", "logged_expert", "mode", "policy_hashes", "bars_manifest_hash"],
        "properties": {
          "prediction_id": { "type": "string" },
          "symbol": { "type": "string" },
          "asof_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
          "p_up": { "type": "number" },
          "score": { "type": "number" },
          "logged_expert": { "type": "string" },
          "mode": { "type": "string", "enum": ["LOCAL", "CI"] },
          "bars_manifest_hash": { "type": "string", "pattern": "^sha256:[a-f0-9]{64}$" },
          "policy_hashes": {
            "type": "object",
            "additionalProperties": { "type": "string", "pattern": "^sha256:[a-f0-9]{64}$" }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
