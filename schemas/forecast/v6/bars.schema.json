{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Forecast v6 Bars Manifest",
  "type": "object",
  "required": ["asof_date", "provider", "provider_revision", "partitions", "hashes", "bars_manifest_hash"],
  "properties": {
    "asof_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "provider": { "type": "string" },
    "provider_revision": { "type": "string" },
    "partitions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "hashes": {
      "type": "object",
      "additionalProperties": { "type": "string", "pattern": "^sha256:[a-f0-9]{64}$" }
    },
    "bars_manifest_hash": { "type": "string", "pattern": "^sha256:[a-f0-9]{64}$" }
  },
  "additionalProperties": false
}
