{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://rubikvault.com/schemas/registry.v1.json",
    "title": "Forecast Registry v1",
    "description": "Schema for forecast model registry (MEM v1.2 SSOT)",
    "type": "object",
    "required": [
        "schema_version",
        "models",
        "generated_at"
    ],
    "properties": {
        "schema_version": {
            "type": "string",
            "const": "registry_v1"
        },
        "generated_at": {
            "type": "string",
            "format": "date-time"
        },
        "models": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "type",
                    "version",
                    "status"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "^forecast_[a-z0-9_]+_v[0-9]+\\.[0-9]+$",
                        "description": "Model ID in format forecast_<name>_v<major>.<minor>"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "knn",
                            "logistic",
                            "ensemble",
                            "hybrid"
                        ]
                    },
                    "version": {
                        "type": "string",
                        "pattern": "^v[0-9]+\\.[0-9]+(\\.[0-9]+)?$"
                    },
                    "horizons": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "1d",
                                "5d",
                                "20d"
                            ]
                        }
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "ACTIVE",
                            "CANDIDATE",
                            "DEPRECATED",
                            "RETIRED"
                        ]
                    },
                    "is_champion": {
                        "type": "boolean"
                    },
                    "outputs": {
                        "type": "object",
                        "properties": {
                            "ledger_path": {
                                "type": "string"
                            },
                            "latest_path": {
                                "type": "string"
                            }
                        }
                    },
                    "policy_hash": {
                        "type": "string",
                        "pattern": "^sha256:[a-f0-9]{64}$"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        }
    }
}