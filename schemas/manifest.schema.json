{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Manifest v3.0 - Per-Ticker Authority",
  "description": "Single source of truth for per-ticker canonical and signals data state",
  "type": "object",
  "required": ["schema_version", "generated_at", "tickers", "summary"],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "3.0"
    },
    "generated_at": {
      "type": "string",
      "description": "ISO8601 timestamp of manifest generation"
    },
    "tickers": {
      "type": "object",
      "description": "Per-ticker state mapping (ticker symbol as key)",
      "additionalProperties": {
        "type": "object",
        "required": ["status", "canon_ref", "signals_ref", "last_updated", "warnings"],
        "additionalProperties": true,
        "properties": {
          "status": {
            "type": "string",
            "enum": ["valid", "stale", "invalid", "degraded"],
            "description": "Current data status"
          },
          "canon_ref": {
            "type": "string",
            "description": "Reference path to canonical data file"
          },
          "signals_ref": {
            "description": "Reference path to signals file or null if unavailable",
            "oneOf": [
              { "type": "string" },
              { "type": "null" }
            ]
          },
          "last_updated": {
            "type": "string",
            "description": "ISO8601 timestamp of last successful update"
          },
          "warnings": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Warning messages for this ticker"
          },
          "fallback_date": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
            "description": "YYYY-MM-DD date of fallback data if using historical"
          },
          "staleness_hours": {
            "type": "number",
            "minimum": 0,
            "description": "Hours since last update"
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "required": ["total", "valid", "stale", "invalid", "degraded", "last_build_id"],
      "additionalProperties": true,
      "properties": {
        "total": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of tickers"
        },
        "valid": {
          "type": "integer",
          "minimum": 0,
          "description": "Count of valid tickers"
        },
        "stale": {
          "type": "integer",
          "minimum": 0,
          "description": "Count of stale tickers"
        },
        "invalid": {
          "type": "integer",
          "minimum": 0,
          "description": "Count of invalid tickers"
        },
        "degraded": {
          "type": "integer",
          "minimum": 0,
          "description": "Count of degraded tickers"
        },
        "last_build_id": {
          "type": "string",
          "description": "Build identifier for traceability"
        }
      }
    }
  }
}
