{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Trading Signals v3.0",
  "description": "Structured machine-readable trading signals with explainable recommendations",
  "type": "object",
  "required": ["schema_version", "ticker", "score", "recommendation", "reasons", "meta"],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "3.0"
    },
    "ticker": {
      "type": "string",
      "description": "Stock ticker symbol"
    },
    "score": {
      "type": "number",
      "minimum": -100,
      "maximum": 100,
      "description": "Composite signal score (-100=strong sell, 0=neutral, +100=strong buy)"
    },
    "recommendation": {
      "type": "string",
      "enum": ["BUY", "HOLD", "SELL", "NO_SIGNAL"],
      "description": "Trading recommendation based on signal analysis"
    },
    "reasons": {
      "type": "array",
      "description": "Structured machine-readable signal explanations",
      "items": {
        "type": "object",
        "required": ["feature", "value", "interpretation", "contribution"],
        "additionalProperties": true,
        "properties": {
          "feature": {
            "type": "string",
            "description": "Feature or indicator name"
          },
          "value": {
            "description": "Current feature value",
            "oneOf": [
              { "type": "number" },
              { "type": "string" }
            ]
          },
          "interpretation": {
            "type": "string",
            "description": "Human-readable interpretation"
          },
          "contribution": {
            "type": "number",
            "description": "Contribution to overall score"
          },
          "thresholds": {
            "type": "object",
            "description": "Optional threshold values for context",
            "properties": {
              "min": { "type": "number" },
              "max": { "type": "number" },
              "target": { "type": "number" }
            },
            "additionalProperties": true
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "required": ["model_version", "confidence", "build_id", "generated_at"],
      "additionalProperties": true,
      "properties": {
        "model_version": {
          "type": "string",
          "description": "Signal model version identifier"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Model confidence level (0-1)"
        },
        "build_id": {
          "type": "string",
          "description": "Build identifier for traceability"
        },
        "generated_at": {
          "type": "string",
          "description": "ISO8601 timestamp of signal generation"
        }
      }
    }
  }
}
