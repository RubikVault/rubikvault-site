{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Feature Registry",
  "type": "object",
  "required": ["schemaVersion", "features"],
  "properties": {
    "schemaVersion": { "type": "string" },
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "tier",
          "provider",
          "cadencePerDay",
          "maxFanout",
          "primaryKey",
          "dependencies"
        ],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "tier": { "type": "string" },
          "provider": { "type": "string" },
          "cadencePerDay": { "type": "number" },
          "maxFanout": { "type": "number" },
          "primaryKey": { "type": "string" },
          "dependencies": { "type": "array", "items": { "type": "string" } },
          "poisonGuard": {
            "type": "object",
            "properties": {
              "minItems": { "type": "number" },
              "allowEmpty": { "type": "boolean" }
            }
          }
        }
      }
    }
  }
}
