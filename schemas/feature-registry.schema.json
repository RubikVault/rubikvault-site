{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Feature Registry",
  "type": "object",
  "required": ["schemaVersion", "features"],
  "properties": {
    "schemaVersion": { "type": "string" },
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "blockId",
          "title",
          "tier",
          "provider",
          "cadenceSec",
          "maxFanout",
          "dependencies",
          "timezoneAssumption",
          "dataAtDefinition",
          "freshnessWindowSec",
          "validators",
          "poisonGuard",
          "costModel"
        ],
        "properties": {
          "id": { "type": "string" },
          "blockId": { "type": "string" },
          "title": { "type": "string" },
          "tier": { "type": "string" },
          "provider": { "type": "string" },
          "cadenceSec": { "type": "number" },
          "cadencePerDay": { "type": "number" },
          "maxFanout": { "type": "number" },
          "dependencies": { "type": "array", "items": { "type": "string" } },
          "timezoneAssumption": { "type": "string" },
          "dataAtDefinition": { "type": "string" },
          "freshnessWindowSec": { "type": "number" },
          "validators": {
            "type": "object",
            "required": ["minItems", "minPoints", "minCoveragePct", "finiteNumbers"],
            "properties": {
              "minItems": { "type": "number" },
              "minPoints": { "type": "number" },
              "minCoveragePct": { "type": "number" },
              "finiteNumbers": { "type": "boolean" }
            }
          },
          "poisonGuard": {
            "type": "object",
            "required": ["minItems", "minCoveragePct", "allowDegradedWrite"],
            "properties": {
              "minItems": { "type": "number" },
              "minCoveragePct": { "type": "number" },
              "allowDegradedWrite": { "type": "boolean" }
            }
          },
          "costModel": {
            "type": "object",
            "required": ["requestsPerRunEstimate", "creditsPerRunEstimate"],
            "properties": {
              "requestsPerRunEstimate": { "type": "number" },
              "creditsPerRunEstimate": { "type": "number" }
            }
          },
          "primaryKey": { "type": "string" },
          "package": { "type": "string" }
        }
      }
    }
  }
}
