{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Forecast Policy v3 Schema",
    "type": "object",
    "required": [
        "schema_version",
        "system",
        "universe",
        "circuit_breaker"
    ],
    "properties": {
        "schema_version": {
            "type": "string",
            "pattern": "^forecast_policy_v[0-9]+$"
        },
        "system": {
            "type": "object",
            "required": [
                "id",
                "version"
            ],
            "properties": {
                "id": {
                    "type": "string"
                },
                "version": {
                    "type": "string",
                    "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
                }
            }
        },
        "data_sources": {
            "type": "object",
            "properties": {
                "prices": {
                    "type": "object",
                    "properties": {
                        "provider": {
                            "type": "string"
                        },
                        "max_missing_pct_daily": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 100
                        }
                    }
                }
            }
        },
        "universe": {
            "type": "object",
            "required": [
                "default",
                "source"
            ],
            "properties": {
                "default": {
                    "type": "string"
                },
                "source": {
                    "type": "string"
                },
                "refresh_strategy": {
                    "type": "object",
                    "properties": {
                        "daily": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "weekly": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "monthly": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "circuit_breaker": {
            "type": "object",
            "required": [
                "missing_price_data_pct_trigger",
                "action_on_trigger"
            ],
            "properties": {
                "missing_price_data_pct_trigger": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 100
                },
                "action_on_trigger": {
                    "type": "string",
                    "enum": [
                        "CIRCUIT_OPEN_PUBLISH_LAST_GOOD",
                        "CIRCUIT_OPEN_FAIL"
                    ]
                }
            }
        },
        "horizons": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "calibration": {
            "type": "object"
        },
        "baseline": {
            "type": "object"
        },
        "promotion_gates": {
            "type": "object"
        },
        "backfill": {
            "type": "object"
        }
    }
}