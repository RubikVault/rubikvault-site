{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "rv.pulse.v3.json",
  "type": "object",
  "required": ["meta", "as_of", "coverage"],
  "properties": {
    "meta": {"type": "object"},
    "as_of": {"type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"},
    "coverage": {"type": "object"},
    "top_movers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["canonical_id", "ticker", "change_pct"],
        "properties": {
          "canonical_id": {"type": "string"},
          "ticker": {"type": "string"},
          "change_pct": {"type": "number"}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
